<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="rikkei_education_service.LoginWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:rikkei_education_service" Icon="/Resources/Images/icon/icon.ico" Title="Liên Kết Portal - Rikkei Education Service" Height="500" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F5F5F5">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="LoginCardStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#FFFFFFFF" />
        <Setter Property="Border.CornerRadius" Value="12" />
        <Setter Property="Border.Padding" Value="30" />
        <Setter Property="UIElement.Effect">
          <Setter.Value>
            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.15" />
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="PortalButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="50" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#FFFFFFFF" />
        <Setter Property="Background" Value="#3498DB" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
              <Border Background="{TemplateBinding Control.Background}" CornerRadius="25" Padding="20,12">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
        <Style.Triggers>
          <Trigger Property="UIElement.IsMouseOver" Value="True">
            <Setter Property="Background" Value="#2980B9" />
            <Setter Property="FrameworkElement.Cursor" Value="Hand" />
          </Trigger>
        </Style.Triggers>
      </Style>
      <Style x:Key="TitleTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#2C3E50" />
        <Setter Property="HorizontalAlignment" Value="Center" />
      </Style>
      <Style x:Key="SubtitleTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="#7F8C8D" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
      </Style>
      <Storyboard x:Key="SpinnerAnimation">
        <DoubleAnimation Storyboard.TargetName="Spinner" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever" />
      </Storyboard>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid>
    <Border Style="{StaticResource LoginCardStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="450" Height="350">
      <StackPanel>
        <Border Width="80" Height="80" Background="#3498DB" CornerRadius="40" HorizontalAlignment="Center" Margin="0,0,0,25">
          <TextBlock Text="🎓" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <TextBlock Text="Rikkei Education Service" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,15" />
        <TextBlock Text="Vui lòng liên kết với portal để tiếp tục" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,35" />
        <StackPanel>
          <Button Name="ConnectPortalButton" Content="Liên kết ngay" Style="{StaticResource PortalButtonStyle}" HorizontalAlignment="Center" Click="ConnectPortalButton_Click" />
          <ProgressBar Name="LoadingProgressBar" Width="200" Height="4" Margin="0,10,0,0" HorizontalAlignment="Center" Visibility="Collapsed" IsIndeterminate="True" />
        </StackPanel>
        <StackPanel Margin="0,30,0,0" HorizontalAlignment="Center">
          <TextBlock Text="Hệ thống sẽ tự động tải thông tin sinh viên" FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center" Margin="0,0,0,5" />
          <TextBlock Text="và chuyển đến giao diện chính" FontSize="12" Foreground="#95A5A6" HorizontalAlignment="Center" />
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</Window>